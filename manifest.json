{
  "manifest_version": 2,
  "name": "Trello New Tab",
  "version": "1.0",
  "description": "Show not done Trello cards on the new tab page",
  "permissions": ["activeTab", "storage", "https://api.trello.com/"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Trello New Tab"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
